<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        app:cardBackgroundColor="#000000"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/mprofile3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="11dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/profile_background"
                app:srcCompat="@drawable/ic_account_circle_white_24dp" />

            <TextView
                android:id="@+id/mname3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/mprofile3"
                android:layout_marginStart="29dp"
                android:layout_toEndOf="@+id/mprofile3"
                android:text="TextView"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                tools:text="@string/name" />

            <TextView
                android:id="@+id/mhashtag3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/mprofile3"
                android:layout_below="@+id/mprofile3"
                android:layout_marginTop="8dp"
                android:text="#hashtag"
                android:textColor="@color/cardview_light_background" />

            <TextView
                android:id="@+id/mdate3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/mname3"
                android:layout_below="@+id/mname3"
                android:text="date"
                android:textColor="@color/cardview_light_background" />

            <TextView
                android:id="@+id/mtime3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/mdate3"
                android:layout_below="@+id/mdate3"
                android:text="time"
                android:textColor="@color/cardview_light_background" />

            <ImageButton
                android:id="@+id/mbookmark3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/mname3"
                android:layout_marginEnd="7dp"
                android:background="#000000"
                app:srcCompat="@drawable/ic_turned_in_not_white_24dp" />

            <TextView
                android:id="@+id/mmeme3"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mhashtag3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/arbutus_slab"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/ivMeme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mmeme3"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5pt"
                android:layout_marginTop="12dp"
                android:visibility="visible"
                app:srcCompat="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/ivMeme"
                android:layout_marginBottom="15pt"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/haha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/mhashtag3"
                        android:layout_below="@+id/ivMeme"
                        android:background="#000000"
                        app:srcCompat="@drawable/ic_sentiment_very_satisfied_white_24dp" />

                    <TextView
                        android:id="@+id/hahano"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="no."
                        android:textAlignment="center"
                        android:textColor="@color/cardview_light_background" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/normal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/mmeme3"
                        android:layout_alignTop="@+id/sad"
                        android:background="#000000"
                        app:srcCompat="@drawable/ic_sentiment_neutral_white_24dp" />

                    <TextView
                        android:id="@+id/normalno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="no."
                        android:textAlignment="center"
                        android:textColor="@color/cardview_light_background" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/sad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/mtime3"
                        android:layout_alignTop="@+id/haha"
                        android:background="#000000"
                        app:srcCompat="@drawable/ic_sentiment_very_dissatisfied_white_24dp" />

                    <TextView
                        android:id="@+id/sadno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="no."
                        android:textAlignment="center"
                        android:textColor="@color/cardview_light_background" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
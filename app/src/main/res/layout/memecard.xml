<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#000000"
        app:cardBackgroundColor="#000000"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/mprofile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="11dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/profile_background"
                app:srcCompat="@drawable/ic_account_circle_white_24dp" />

            <TextView
                android:id="@+id/mname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/mprofile"
                android:layout_marginStart="29dp"
                android:layout_toEndOf="@+id/mprofile"
                android:text="TextView"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                tools:text="@string/name" />

            <TextView
                android:id="@+id/mhashtag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/mprofile"
                android:layout_below="@+id/mprofile"
                android:layout_marginTop="8dp"
                android:text="#hashtag"
                android:textColor="@color/cardview_light_background" />

            <TextView
                android:id="@+id/mdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/mname"
                android:layout_below="@+id/mname"
                android:text="date"
                android:textColor="@color/cardview_light_background" />

            <TextView
                android:id="@+id/mtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/mdate"
                android:layout_below="@+id/mdate"
                android:text="time"
                android:textColor="@color/cardview_light_background" />

            <ImageButton
                android:id="@+id/mbookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/mname"
                android:layout_marginEnd="7dp"
                android:background="#000000"
                app:srcCompat="@drawable/ic_turned_in_not_white_24dp" />

            <ImageView
                android:id="@+id/mmeme"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="5pt"
                android:layout_below="@+id/mhashtag"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                app:srcCompat="@android:color/darker_gray" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>